@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Service Request Manager</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/Content/Auth.css" asp-append-version="true" />
</head>
<body class="login-page">

    <div class="login-container">

        <div class="login-header">
            <h1>Service Request Manager</h1>
        </div>

        @* --- Message Section --- *@
        @if (TempData["SuccessMessage"] != null || ViewBag.SuccessMessage != null)
        {
            <div class="success-message">
                @(TempData["SuccessMessage"] ?? ViewBag.SuccessMessage)
            </div>
        }

        @if (!ViewData.ModelState.IsValid || !string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="error-message">
                @Html.ValidationSummary(true, "")
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div>@ViewBag.ErrorMessage</div>
                }
            </div>
        }

        @* --- Form Section --- *@
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "loginForm", autocomplete = "off" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <i class="fas fa-user"></i>
                <input type="text"
                       id="pno"
                       name="pno"
                       class="form-control"
                       placeholder="Username"
                       autocomplete="one-time-code"
                       required
                       autofocus />
            </div>

            <div class="form-group">
                <i class="fas fa-lock"></i>
                <input type="password"
                       id="password"
                       name="password"
                       class="form-control"
                       placeholder="Password"
                       autocomplete="new-password"
                       required />
            </div>

            <button type="submit" class="btn-login" id="loginBtn">
                LOGIN
            </button>
        }

        <div class="auth-footer">
            <a href="@Url.Action("ForgotPassword", "Account")">Forgot Password?</a>

            <p style="margin-top:20px; font-size: 0.85rem; opacity: 0.6;">
                Don't have an account? <a href="@Url.Action("Register", "Account")" style="text-decoration:underline;">Create one now</a>
            </p>
        </div>

    </div>

    <script>
        document.getElementById('loginForm').addEventListener('submit', function (e) {
            if (this.checkValidity()) {
                const btn = document.getElementById('loginBtn');
                btn.disabled = true;
                btn.textContent = "AUTHENTICATING...";
            }
        });
    </script>

</body>
</html>