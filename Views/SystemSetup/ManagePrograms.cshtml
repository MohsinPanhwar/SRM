@model List<SRM.Models.Program_Setup>

@{
    ViewBag.Title = "Manage Programs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="notification-area"></div>

<div class="setup-container">
    <div class="section-header">
        <h2>Manage Programs</h2>
        <div class="action-row">
            <input type="text" id="newProgramName" placeholder="Enter program name" class="form-control" />
            <button id="addProgramBtn" class="setup-btn-green">+ Add Program</button>
        </div>
    </div>

    <table class="crud-table" id="programTable">
        <thead>
            <tr>
                <th>Program Name</th>
                <th style="width: 120px;">Actions</th>
            </tr>
        </thead>
        <tbody id="programTableBody">
            @foreach (var program in Model)
            {
                <tr data-id="@program.Program_Id">
                    <td class="program-name">@program.Program_Name</td>
                    <td class="actions-cell">
                        <div class="icon-btn-group">
                            <button class="edit-btn" title="Edit">✏️</button>
                            <button class="delete-btn" title="Delete">❌</button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section scripts {
    <script>
        $(document).ready(function () {
            // 1. Initial Page Fade-In
            $('.crud-table').animate({ opacity: 1 }, 800);

            // Note: Local showGlobalToast function REMOVED.
            // We now call showGlobalToast() which is defined in _Layout.cshtml.

            // ADD PROGRAM
            $('#addProgramBtn').click(function () {
                var btn = $(this);
                var name = $('#newProgramName').val().trim();

                if (!name) {
                    showGlobalToast('Please enter a program name', 'error');
                    return;
                }

                btn.addClass('loading-spinner').text('Saving...');

                $.post('@Url.Action("Add", "Program")', { programName: name }, function (res) {
                    btn.removeClass('loading-spinner').html('+ Add Program');

                    if (res.success) {
                        var newRow = $(`
                            <tr data-id="${res.program.Program_Id}" style="display:none; background-color: #f0fff4;">
                                <td class="program-name">${res.program.Program_Name}</td>
                                <td class="actions-cell">
                                    <div class="icon-btn-group">
                                        <button class="edit-btn" title="Edit">✏️</button>
                                        <button class="delete-btn" title="Delete">❌</button>
                                    </div>
                                </td>
                            </tr>
                        `);

                        $('#programTableBody').append(newRow);
                        newRow.fadeIn(1000, function() {
                            $(this).css('background-color', 'transparent');
                        });

                        $('#newProgramName').val('');
                        showGlobalToast("Program added successfully!", "success");
                    } else {
                        showGlobalToast(res.message, 'error');
                    }
                });
            });

            // DELETE PROGRAM
            $(document).on('click', '.delete-btn', function () {
                var row = $(this).closest('tr');
                var id = row.data('id');

                if (confirm('Are you sure you want to delete this program?')) {
                    $.post('@Url.Action("Delete", "Program")', { id: id }, function (res) {
                        if (res.success) {
                            row.css('background-color', '#fff5f5').fadeOut(600, function() {
                                $(this).remove();
                                showGlobalToast("Program deleted successfully.", "error");
                            });
                        } else {
                            showGlobalToast(res.message, 'error');
                        }
                    });
                }
            });

            // SAVE EDIT
            $(document).on('click', '.save-btn', function () {
                var row = $(this).closest('tr');
                var id = row.data('id');
                var newName = row.find('.edit-input').val().trim();

                if (!newName) {
                    showGlobalToast('Name cannot be empty', 'error');
                    return;
                }

                $.post('@Url.Action("Edit", "Program")', { id: id, programName: newName }, function (res) {
                    if (res.success) {
                        revertRow(row, res.program.Program_Name);
                        showGlobalToast("Changes saved successfully!", "success");
                    } else {
                        showGlobalToast(res.message, 'error');
                    }
                });
            });

            // (Edit and Cancel functions remain the same...)
            $(document).on('click', '.edit-btn', function () {
                var row = $(this).closest('tr');
                var nameCell = row.find('.program-name');
                var oldName = nameCell.text().trim();
                row.data('old-name', oldName);
                nameCell.html(`<input type="text" class="edit-input" value="${oldName}" style="width:100%; padding:5px; border:1px solid #4CAF50;" />`);
                row.find('.actions-cell').html(`
                    <div class="icon-btn-group">
                        <button class="save-btn" title="Save">💾</button>
                        <button class="cancel-btn" title="Cancel">🚫</button>
                    </div>
                `);
            });

            $(document).on('click', '.cancel-btn', function () {
                var row = $(this).closest('tr');
                revertRow(row, row.data('old-name'));
            });

            function revertRow(row, name) {
                row.find('.program-name').text(name);
                row.find('.actions-cell').html(`
                    <div class="icon-btn-group">
                        <button class="edit-btn" title="Edit">✏️</button>
                        <button class="delete-btn" title="Delete">❌</button>
                    </div>
                `);
            }
        });
    </script>
}}