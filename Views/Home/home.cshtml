@model SRM.Models.Agent
@using SRM.Helpers

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .welcome-container {
        padding: 4rem 2rem;
        max-width: 800px;
        margin: 0 auto;
        text-align: center;
        font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    }

    .welcome-text {
        margin-bottom: 0.5rem;
    }


    .welcome-emoji {
        font-size: 3rem;
        display: block;
        margin-bottom: 1rem;
        /* Changed 'infinite' to '1' and added 'forwards' */
        animation: wave 1.5s ease-in-out 1 forwards;
        transform-origin: 70% 70%;
    }

    @@keyframes wave {
        0% {
            transform: rotate(0deg)
        }

        20% {
            transform: rotate(7deg)
        }

        40% {
            transform: rotate(-4deg)
        }

        60% {
            transform: rotate(7deg)
        }

        80% {
            transform: rotate(-2deg)
        }

        100% {
            transform: rotate(0deg)
        }
    }

    .user-name {
        font-size: 2.5rem;
        font-weight: 700;
        color: #1a1a1a;
        margin: 0;
        letter-spacing: -0.5px;
    }

    .admin-badge {
        display: inline-block;
        margin-top: 10px;
        padding: 4px 12px;
        background: #ecfdf5;
        color: #059669;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .action-links {
        margin-top: 2.5rem;
        display: flex;
        justify-content: center;
        gap: 2rem;
    }

    .minimal-link {
        color: #6366f1;
        text-decoration: none;
        font-weight: 500;
        font-size: 1.1rem;
        position: relative;
        transition: color 0.2s;
    }

        .minimal-link:after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            display: block;
            margin-top: 5px;
            right: 0;
            background: #6366f1;
            transition: width 0.3s ease;
            -webkit-transition: width 0.3s ease;
        }

        .minimal-link:hover:after {
            width: 100%;
            left: 0;
            background: #4338ca;
        }

        .minimal-link:hover {
            color: #4338ca;
        }

    .banner-image {
        width: 100%;
        max-height: 300px;
        object-fit: cover;
    }
</style>

<section class="home-banner">
    <img src="~/Content/images/Banner.jpeg"
         alt="Welcome banner"
         loading="lazy"
         class="banner-image">
</section>

<section class="welcome-container">
    <span class="welcome-emoji">👋</span>

    <div class="welcome-text">
        <h2 class="user-name">Welcome, @Model.Name</h2>

        @if (PrivilegeHelper.IsSuperAdmin())
        {
            <span class="admin-badge">Super Admin</span>
        }
        else
        {
            <span class="admin-badge">@ViewBag.RoleName</span>
        }

    </div>


</section>