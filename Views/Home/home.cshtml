@model SRM.Models.Agent
@using SRM.Helpers

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .user-info-section {
        padding: 1.5rem 1rem;
        max-width: 90%;
        margin: 0 auto;
    }

    .user-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        max-width: 60%;
        margin: 0 auto;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .user-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 32px rgba(0, 0, 0, 0.1);
        }

    .card-header {
        background: linear-gradient(135deg, #56e678 0%, #2e7d57 50%, #56e678 100%);
        color: white;
        padding: 2rem 1.5rem;
        text-align: center;
    }

    .welcome-emoji {
        font-size: 3.2rem;
        display: block;
        margin-bottom: 0.8rem;
    }

    .card-header h2 {
        margin: 0;
        font-size: 1.9rem;
        font-weight: 600;
    }

    .card-body {
        padding: 1.8rem 1.5rem;
    }

    .info-row {
        display: flex;
        justify-content: space-between;
        padding: 1rem 20px;
        border-bottom: 1px solid #f0f0f0;
    }

        .info-row:last-child {
            border-bottom: none;
        }

    .info-label {
        font-weight: 500;
        color: #555;
        min-width: 110px;
    }

    .info-value {
        font-weight: 500;
        color: #222;
        text-align: right;
        flex: 1;
    }

        .info-value a {
            color: #4f46e5;
            text-decoration: none;
        }

            .info-value a:hover {
                text-decoration: underline;
            }

    .operator {
        color: #666;
        font-size: 0.92em;
    }

    .card-footer {
        padding: 1.2rem 1.5rem;
        background: #f8f9fa;
        text-align: center;
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        padding: 0.65rem 1.4rem;
        border-radius: 8px;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s;
    }

    .btn-primary {
        background: #4f46e5;
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background: #4338ca;
        }

    .btn-outline {
        border: 1px solid #cbd5e1;
        color: #334155;
        background: white;
    }

        .btn-outline:hover {
            background: #f1f5f9;
            border-color: #94a3b8;
        }
</style>

<!-- Banner -->
<section class="home-banner">
    <img src="~/Content/images/Banner.jpeg"
         alt="Welcome banner"
         loading="lazy"
         class="banner-image">
</section>

<!-- User Info Card -->
<section class="user-info-section">
    <div class="user-card">
        
        <div class="card-header">
            <span class="welcome-emoji">👋</span>
            <h2>Welcome, @Model.Name!</h2>
            @if (PrivilegeHelper.IsSuperAdmin())
            {
                <h1>Super Admin</h1>
            }
            </div>
            </div>

            <!-- Optional: quick actions -->
            <div class="card-footer">
                <a href="#" class="setup-btn-green">View Profile</a>
                <a href="#" class="btn btn-outline">Settings</a>
            </div>
        </div>
</section>