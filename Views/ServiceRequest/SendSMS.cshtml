@using SRM.Models
@{
    ViewBag.Title = "Send SMS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Send SMS</title>
</head>
<body>
    <div class="setup-container">
        <div class="section-header">
            <h2>Send SMS</h2>
        </div>

        @using (Html.BeginForm("ProcessSMS", "Send", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-body" style="padding: 20px;">

                <div class="form-group" style="margin-bottom: 15px;">
                    <label for="agentPno">Select Recipient:</label>
                    <select id="agentPno" name="agentPno" class="form-control" required style="width: 100%; padding: 8px;">
                        <option value="">-- Select an Agent --</option>
                        @if (ViewBag.AgentList != null)
                        {
                            foreach (var agent in (List<Agent>)ViewBag.AgentList)
                            {
                                <option value="@agent.Pno">@agent.Name (@agent.Pno)</option>
                            }
                        }
                    </select>
                </div>

                <div class="form-group" style="margin-bottom: 15px;">
                    <label for="message">Message:</label>
                    <textarea id="message" name="message" class="form-control" rows="5" required
                              placeholder="Type your message here..."
                              style="width: 100%; padding: 8px; height: 150px !important;"></textarea>
                </div>

                <div class="form-actions" style="display: flex; justify-content: flex-end; width: 100%; margin-top: 20px;">
                    <button type="submit" class="setup-btn-green">
                        Send SMS
                    </button>
                </div>
            </div>
        }
    </div>
</body>
</html>